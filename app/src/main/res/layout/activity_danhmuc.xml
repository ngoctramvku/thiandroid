<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">

    <Toolbar
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="#262770"
        android:titleTextColor="#fff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:gravity="center"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgImageCat"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/meo"

            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgImageDog"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/cho"
            android:layout_toEndOf="@+id/imgImageCat"
            android:layout_marginStart="30dp"

            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/btnCat"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="400dp"
            android:background="#262770"
            android:text="Mèo"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDog"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="91dp"
            android:layout_marginTop="400dp"
            android:background="#262770"
            android:text="Chó"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        >

        <Button
            android:id="@+id/btndk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:background="#262770"
            android:text="Đăng kí"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btndn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/btndk"
            android:layout_marginStart="235dp"
            android:background="#262770"
            android:text="Đăng nhập"
            android:textColor="#fff" />
    </LinearLayout>


</RelativeLayout>

